pkgname=libpng-dev
pkgver=1.6.40
pkgrel=1
pkgdesc='A collection of routines used to create PNG format graphics'
arch=('x86_64')
url="http://www.libpng.org/pub/png/libpng.html"
makedepends=('zlib')
license=('custom')
source=("git+https://github.com/glennrp/libpng.git")
md5sums=('SKIP')

build() {
  export PATH="/github/home/cross/bin:$PATH"
  export PKG_CONFIG_LIBDIR="/github/home/opt/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  export CFLAGS="-fno-asynchronous-unwind-tables -I/github/home/opt/include"
  export CPPFLAGS="-I/github/home/opt/include"
  export LDFLAGS="-L/github/home/opt/lib"
  cd $srcdir/libpng
  autoreconf -ivf
  ./configure \
    --host=x86_64-w64-mingw32 \
    --prefix=/github/home/opt \
    --disable-shared \
    --enable-static
  make
}

package() {
  cd $srcdir/libpng
  make DESTDIR=$pkgdir install
}
