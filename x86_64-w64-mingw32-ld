#!/bin/sh
CROSS_DIR=$(cd $(dirname "${BASH_SOURCE[0]}") && cd .. && pwd)
PROG=$CROSS_DIR/bin/ld.lld
TARGET=x86_64-w64-mingw32
FLAGS="-m i386pep"
FLAGS="$FLAGS -O3 -mllvm --polly -mllvm --polly-position=before-vectorizer -mllvm --polly-scheduling=dynamic -mllvm --polly-ast-use-context -mllvm --polly-vectorizer=stripmine -mllvm --polly-run-dce -mllvm --polly-invariant-load-hoisting -mllvm --polly-run-inliner"

"$PROG" $FLAGS "$@"
