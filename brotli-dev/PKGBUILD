pkgname=brotli-dev
pkgver=1.0.9
pkgrel=1
pkgdesc='Generic-purpose lossless compression algorithm'
arch=('x86_64')
url="https://github.com/google/brotli/"
license=('MIT')
source=("git+https://github.com/google/brotli")
md5sums=('SKIP')

build() {
  cd $srcdir/brotli
  export TOP_DIR="/home/builder"
  export PKG_CONFIG_LIBDIR="/home/builder/opt/lib/pkgconfig"
  export PKG_CONFIG="pkgconf --static"
  export PATH="/home/builder/cross/bin:$PATH"
  rm -rf out && mkdir out && cd out
  cmake ..  \
    -DCMAKE_INSTALL_PREFIX=/home/builder/opt \
    -DCMAKE_TOOLCHAIN_FILE=/home/builder/toolchain-test/toolchain.cmake \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DBROTLI_EMSCRIPTEN=OFF
  make
}  
  
package() {
  cd $srcdir/brotli/out
  DESTDIR=$pkgdir ninja install
}  
