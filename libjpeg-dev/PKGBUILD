pkgname=libjpeg-dev
pkgver=2.1.91
pkgrel=1
pkgdesc='JPEG image codec with accelerated baseline compression and decompression'
arch=('x86_64')
url="https://libjpeg-turbo.virtualgl.org/"
license=('custom')
source=("git+https://github.com/libjpeg-turbo/libjpeg-turbo.git")
md5sums=('SKIP')

prepare() {
  # Speed up the process
  # Env Var NUMJOBS overrides automatic detection
  MJOBS=$(grep -c processor /proc/cpuinfo)

  export TOP_DIR=$(pwd)
  export M_CROSS=$TOP_DIR/cross
  export RUSTUP_LOCATION=$TOP_DIR/rustup_location

  export MINGW_TRIPLE="x86_64-w64-mingw32"

  export PATH="$M_CROSS/bin:$RUSTUP_LOCATION/.cargo/bin:$PATH"
  export PKG_CONFIG="pkgconf --static"
  export PKG_CONFIG_LIBDIR="$M_CROSS/opt/lib/pkgconfig"
  export RUSTUP_HOME="$RUSTUP_LOCATION/.rustup"
  export CARGO_HOME="$RUSTUP_LOCATION/.cargo"

build() {
  cd $srcdir/libjpeg-turbo
  rm -rf build && mkdir build && cd build
  cmake .. -G Ninja \
    -DCMAKE_INSTALL_PREFIX=$M_CROSS/mingw \
    -DCMAKE_TOOLCHAIN_FILE=$TOP_DIR/toolchain.cmake \
    -DENABLE_SHARED=OFF \
    -DENABLE_STATIC=ON \
    -DCMAKE_BUILD_TYPE=Release
ninja -j$MJOBS
}

package() {
  cd $srcdir/libjpeg-turbo/build
  DESTDIR=$pkgdir ninja install
}
